

<section class="admin-dashboard">
<header class="page-header">
<h1>Admin Dashboard</h1>
</header>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
      <h4 class="my-0 fw-normal">Total Products</h4>
      <%= @product_count %>
      <br />

        <p class="card-text">       <h4><%= "The current number of different products in stock: #{@number_of_products}" %></h4>
        </p>       <%= link_to "Go to Products","/admin/products", :class => "btn btn-primary" %>

      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
      <h4 class="my-0 fw-normal">Total Categories</h4>
        <p class="card-text"><%= @number_of_categories %></p>
      </div>
    </div>
  </div>
</div>



</section>
